{
    "name": "power-pdo/power-pdo",
    "description": "A PDO wrapper library that logs SQL queries with debug information",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PowerPdo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PowerPdo\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs"
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    }
}
